{% extends "layout_admin.njk" %}


{% block content %}


  
  <section class="admin-edit-title">
      <h2>Editando receita</h2>
        <span>
          <form action="/admin/recipe/create?_method=DELETE" method="POST">
            <button type="submit">Deletar</button>
            <input type="hidden" name="id" value="{{recipe.id}}">
          </form>
        </span>
        <span>
          <button form="update" type="submit">Salvar receita</button>
        </span>
        
  </section>
<form id="update" method="POST" action="/admin/recipe/create?_method=PUT" enctype="multipart/form-data">
  <section class="details">

    {% include 'admin/fields.njk' %}
  
  </section>
  <input type="hidden" name="id" value="{{recipe.id}}">
</form>


{% endblock content %}