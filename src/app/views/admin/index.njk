{% extends "layout_admin.njk" %}

{% block content %}


  <section id="featured-admin">
    <section class="admin-show-title">
      <h2>Gerenciar receitas</h2><span><a class="admin-button" href="/admin/recipe/create">Adicionar</a></span>
    </section>
    
    <div class="cards-admin">
    {% for recipe in recipes %}
      <div class="card-admin" id="{{ recipe.id }}">
        <img src="{{recipe.image}}" alt="Imagem de {{recipe.image}}">
        <div class="admin-recipe-details">
          <p class="recipe-name-admin">{{recipe.title}}</p>
          <p class="recipe-author-admin">{{recipe.chef_name}}</p>
          <a href="/admin/recipe/{{recipe.id}}">Visualizar</a>
        </div>
      </div>

    {% endfor %}
    
    </div>
  </section>

{% endblock %}