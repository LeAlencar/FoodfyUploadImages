
    <div class="item">
      <div>Titulo</div>
      <div>
        <input 
          type="text" 
          name="title"
          placeholder="Título da receita"
          value="{{ recipes.title }}"
          >
      </div>
    </div>


    <div class="item">
      <div>Autor</div>
      <div>
        <input 
          type="text" 
          name="author"
          placeholder="Autor da receita"
          value="{{ recipes.author }}"
          >
      </div>
    </div>
    
    
    
    <div class="item">
      <div>Imagem da Receita</div>
      <div>
        <input 
          type="url"
          name="image"
          placeholder="http://"
          value="{{ recipes.image }}"
          >
      </div>
    </div>
    

    <div class="item">
      <div>Ingredientes</div>
      <div id="ingredients">
        {% for ingredient in recipes.ingredients %}
        <div class="ingredient">
          <input 
            type="text" 
            name="ingredients[]"
            placeholder="Ingredientes da receita"
            value="{{ ingredient }}"
          >
        </div>
        {%else%}
        <div class="ingredient">
          <input 
            type="text" 
            name="ingredients[]"
            placeholder="Novo ingrediente"
            value=""
            ><br>
        </div>
        {%endfor%}
      </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
    </div>

    <div class="item">
      <div>Modo de Preparo</div>
      <div id="prepare">
        {% for preparation in recipes.preparation %}
        <div class="prepareField">
          <input 
            type="text" 
            name="preparation[]"
            placeholder="Modo de preparo"
            value="{{ preparation }}"
            ><br>
        </div>
        {%else%}
        <div class="prepareField">
          <input
            type="text" 
            name="preparation[]"
            placeholder="Modo de preparo"
            ><br>
        </div>
        {%endfor%}
      </div>
        <button type="button" class="add-prepare">Adicionar novo passo</button>
    </div>

    <div class="item">
      <div>Informações adicionais</div>
      <div>
        <textarea
          class="admin-info-textarea"
          rows="15"
          name="information"
          placeholder="Informações adicionais"
          
          >{{ recipes.information }}
        </textarea>
          
      </div>
    </div>
